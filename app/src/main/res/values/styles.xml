<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="titleTextColor">#3E3E3E</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnim</item>-->
        <!--<item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>-->
    </style>

    <!--<style name="activityAnim">-->
        <!--<item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>-->
        <!--<item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>-->
        <!--<item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>-->
    <!--</style>-->

    <style name="TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.CourseDetail">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ifafu_blue</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/effective_black</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.Blue" parent="Button" tools:keep="@style/Button_Blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn2</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/shape_edit_selector</item>
    </style>

    <style name="EditText.Material">
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor</item>
    </style>

    <style name="TextInput" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextView.Exam">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/global_blue</item>
    </style>

    <style name="Dialog.Loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>
