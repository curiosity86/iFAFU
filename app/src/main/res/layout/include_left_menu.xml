<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nav_update"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_update"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="@string/menu_update"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nav_share"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="@string/menu_share"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nav_logout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="@string/menu_logout"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nav_about"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_about"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="@string/menu_about"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nav_fback"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/ic_fback"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="@string/menu_fback"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
