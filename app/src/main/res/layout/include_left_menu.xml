<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/drawable_fafu2" />

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="姓名"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_nav_update"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_update"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="@string/menu_update"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_nav_share"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_share"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="分享应用"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_nav_logout"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="@string/menu_logout"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_nav_about"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_about"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="@string/menu_about"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_nav_fback"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_fback"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="@string/menu_fback"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
