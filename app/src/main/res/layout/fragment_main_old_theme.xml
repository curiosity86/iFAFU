<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
        <variable
            name="viewModel"
            type="cn.ifafu.ifafu.ui.main.oldTheme.MainOldThemeViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/layout_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_old_bg"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/global_blue" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/global_blue">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/shape_head_img"
                    android:text="@{viewModel.user.name.substring(1)}"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintStart_toStartOf="parent"
                    bind:layout_constraintTop_toTopOf="parent"
                    tools:text="雾深" />

                <TextView
                    android:id="@+id/tv_name_big"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_horizontal|bottom"
                    android:text='@{viewModel.user.name, default=""}'
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@id/onlineStatus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="雾深水浅" />

                <TextView
                    android:id="@+id/onlineStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal|top"
                    android:paddingTop="2dp"
                    android:text="@{viewModel.online? @string/online : @string/offline}"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_big"
                    tools:text="在线" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/layout_class_preview"
                        layout="@layout/include_main_old_theme_syllabus"
                        viewGoneWhen="@{viewModel.classPreview == null}"
                        bind:lesson="@{viewModel.classPreview}"
                        bind:semester="@{viewModel.semester}"
                        bind:weather="@{viewModel.weather}"/>

                    <include
                        android:id="@+id/layout_exam_preview"
                        layout="@layout/include_main_old_theme_exam"
                        viewGoneWhen="@{viewModel.examsPreview == null}"
                        bind:exams="@{viewModel.examsPreview}"
                        bind:semester="@{viewModel.semester}" />

                    <include
                        android:id="@+id/layout_score_preview"
                        layout="@layout/include_main_old_theme_score"
                        viewGoneWhen="@{viewModel.scorePreview == null}"
                        bind:score="@{viewModel.scorePreview}"
                        bind:semester="@{viewModel.semester}"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <include
                layout="@layout/include_main_old_theme_menu"
                bind:online="@{viewModel.online}"
                bind:user="@{viewModel.user}" />

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>