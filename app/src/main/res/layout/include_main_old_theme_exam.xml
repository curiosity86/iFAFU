<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exams"
            type="cn.ifafu.ifafu.ui.main.oldTheme.bean.ExamPreview" />

        <variable
            name="semester"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text='@{semester + "学生考试"}'
            android:textColor="#000000"
            android:textSize="12sp"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent"
            tools:text="2019-2020学年第2学期学生考试" />

        <TextView
            android:id="@+id/message"
            viewGoneWhen="@{exams.hasInfo}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_superman"
            android:gravity="center"
            android:text="@string/no_exam_info"
            android:textColor="@color/black"
            android:textSize="14sp"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <LinearLayout
            viewGoneWhen="@{!exams.hasInfo}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="2"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/tv_title">

            <include
                layout="@layout/include_main_old_theme_exam_sub"
                viewGoneWhen="@{exams.items[0] == null}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                bind:exam="@{exams.items[0]}"
                bind:i='@{"1"}' />

            <include
                layout="@layout/include_main_old_theme_exam_sub"
                viewGoneWhen="@{exams.items[1] != null}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                bind:exam="@{exams.items[1]}"
                bind:i='@{"2"}' />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
