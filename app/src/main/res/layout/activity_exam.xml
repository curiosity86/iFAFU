<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.ifafu.ifafu.view.WToolbar
        android:id="@+id/tb_exam"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/exam"
        app:navigationIcon="@drawable/ic_back">

        <ImageButton
            android:id="@+id/btn_exam_refresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_refresh" />

    </cn.ifafu.ifafu.view.WToolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#DDFFFF"
        android:gravity="center"
        android:text="@string/exam_hint"
        android:textColor="#1dcbdb"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            tools:listitem="@layout/item_exam">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>
