<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="adapter"
            type="cn.ifafu.ifafu.view.adapter.ScoreAdapter" />

        <variable
            name="empty"
            type="Boolean" />

        <variable
            name="gpa"
            type="String" />

        <variable
            name="title"
            type="String" />

        <variable
            name="ies"
            type="kotlin.Pair&lt;String, String&gt;" />

        <variable
            name="cnt"
            type="kotlin.Pair&lt;String, String&gt;" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <cn.ifafu.ifafu.view.custom.WToolbar
            android:id="@+id/tb_score"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:elevation="4dp"
            app:title="@string/score">

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_refresh" />

        </cn.ifafu.ifafu.view.custom.WToolbar>

        <TextView
            android:id="@+id/tv_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{title ?? @string/loading, default=@string/loading}"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_ies"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="56dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_ies_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{ies.first}"
                    android:textSize="44sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_ies_big"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@id/tv_ies_big"
                    android:text="@{ies.second ?? @string/loading, default=@string/loading}"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_cnt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_cnt_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cnt.first}"
                    android:textSize="44sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_cnt_big"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@id/tv_cnt_big"
                    android:text="@{cnt.second ?? @string/loading, default=@string/loading}"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="128dp"
                android:text="@string/score_ies"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_cnt"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_gpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text='@{@string/score_gpa(gpa ?? "")}'
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/bg_gray" />

        <cn.ifafu.ifafu.view.custom.EmptyView
            android:id="@+id/view_exam_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{empty ? View.VISIBLE: View.GONE}"
            app:message="@string/exam_data_empty" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:visibility="@{empty? View.GONE : View.VISIBLE}"
            app:adapter="@{adapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/score_list_recycle_item" />

    </LinearLayout>
</layout>